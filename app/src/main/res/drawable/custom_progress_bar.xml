<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo da barra -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#E0E0E0" /> <!-- Cor do fundo da barra -->
        </shape>
    </item>

    <!-- Parte preenchida da barra com efeito gradiente roxo -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#7E57C2"
                android:endColor="#4A148C"
                android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>
